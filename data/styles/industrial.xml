<style-scheme id="industrial" _name="Industrial" version="1.0">
  <author>Jacco Krijnen</author>
  <_description>Classic color scheme</_description>

  <!-- Palette -->
  <color name="white"      value="#DDDDDD"/>
  <color name="comment"    value="#758083"/>
  <color name="magenta"    value="#0057DC"/>
  <color name="violet"     value="#B29EBF"/>
  <color name="cyan"       value="#008A8C"/>
  <color name="lightgray"  value="#a0a0a0"/>
  <color name="gray"       value="#404648"/>
  <color name="darkgray"   value="#353a3b"/>
  <color name="blackblue"   value="#1a1c22"/>
  <color name="grayblue"   value="#22242b"/>
  <color name="lightgrayblue"   value="#30353f"/>
  <color name="green" value="#2a8e0b"/>
  <color name="lightgreen"      value="#91cc6b"/>
  <color name="statement"  value="#CC6700"/>
  <color name="skyblue"    value="#519EC4"/>
  <color name="red"        value="#EF0000"/>
  <color name="yellow"     value="#EDD25A"/>
  <color name="gold"       value="#FFC838"/>
  <color name="lightorange" value="#ecc982"/>
  <color name="orange"     value="#ef9d5d"/>
  <color name="brown"      value="#594011"/>
  <color name="darkblue" value="#0f2c6f"/>
  <!-- Global Settings -->
  <style name="current-line"                background="lightgrayblue"/>
  <style name="cursor"                      foreground="white" />
  <style name="draw-spaces"                 foreground="#aaada6"/>
  <style name="line-numbers"                background="lightgrayblue" foreground="lightgray"/>
  <style name="text"                        background="grayblue" foreground="white"/>
  <style name="selection"                   background="#4A90D9" foreground="#FFFFFF"/>
  <style name="selection-unfocused"         background="#4A90D9" foreground="#FFFFFF"/>
  <style name="selection-match"             background="green" foreground="#FFFFFF"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               background="#0e2229"/>
  <style name="bracket-mismatch"            background="red" foreground="darkgray"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="gray"/>

  <!-- Search Matching -->
  <style name="search-match"                background="green" foreground="#FFFFFF"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="comment"/>
  <style name="def:shebang"                 foreground="comment"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="violet"/>
  <style name="def:string"                  foreground="lightgreen" />

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="yellow"/>

  <!-- Keywords -->
  <style name="def:keyword"                 foreground="skyblue"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="skyblue"/>

  <!-- Types -->
  <style name="def:type"                    foreground="yellow"/>


  <!-- Others -->
  <style name="def:preprocessor"            foreground="#F5F561"/>
  <style name="def:error"                   background="red" bold="true"/>
  <style name="def:warning"                 background="yellow"/>
  <style name="def:note"                    foreground="comment" background="yellow" bold="true"/>
  <style name="def:underlined"              italic="true" underline="false"/>
  <style name="BreakpointRef"               background="brown"/>
  <style name="ContextRef"                  background="darkblue"/>


  <!-- Language specific styles -->
  <style name="diff:added-line"             foreground="#008B8B"/>
  <style name="diff:removed-line"           foreground="#6A5ACD"/>
  <style name="diff:changed-line"           use-style="def:preprocessor"/>
  <style name="diff:special-case"           use-style="def:constant"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:diff-file"              use-style="def:type"/>

  <style name="xml:tags"                    foreground="cyan"/>
  <style name="xml:attribute-name"          foreground="violet"/>
  <style name="xml:namespace"               foreground="green" bold="true"/>

  <style name="js:object"                   foreground="#2E8B57" bold="true"/>
  <style name="js:constructors"             foreground="#008B8B"/>

  <style name="latex:display-math"          foreground="#6A5ACD"/>
  <style name="latex:command"               foreground="#2E8B57" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

  <style name="sh:variable"                 foreground="#6A5ACD"/>


  <!-- legacy styles for old lang files -->
  <style name="Others"                      foreground="#2E8B57" bold="true"/>
  <style name="Others 2"                    foreground="#008B8B"/>
  <style name="Others 3"                    foreground="#6A5ACD"/>

</style-scheme>
