<style-scheme id="github-dark" _name="Github Dark" version="1.0">
  <author></author>
  <_description>Github color scheme</_description>

  <!-- Palette -->
  <color name="white"      value="#DDDDDD"/>
  <color name="magenta"    value="#e2277e"/>
  <color name="violet"     value="#795da3"/>
  <color name="cyan"       value="#43b2d7"/>
  <color name="gray"       value="#969896"/>
  <color name="black"      value="#222222"/>
  <color name="darkgray"   value="#333333"/>
  <color name="darkblue"   value="#6c86d5"/>
  <color name="orange"     value="#ecbe4f"/>

  <!-- Global Settings -->
  <style name="text"                        background="black" foreground="white"/>
  <style name="current-line"                background="darkgray"/>
  <style name="cursor"                      foreground="white" />
  <style name="line-numbers"                foreground="gray" background="darkgray"/>
  <style name="selection"                   background="#4A90D9" foreground="#FFFFFF"/>
  <style name="selection-unfocused"         background="#4A90D9" foreground="#FFFFFF"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               />
  <style name="bracket-mismatch"            />

  <!-- Right Margin -->
  <style name="right-margin"                foreground="gray"/>

  <!-- Search Matching -->
  <style name="search-match"                background="orange" foreground="black"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="gray"/>
  <style name="def:shebang"                 foreground="gray"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="cyan"/>
  <style name="def:string"                  foreground="orange" />

  <!-- Identifiers -->
  <style name="def:identifier"              />

  <!-- Keywords -->
  <style name="def:keyword"                 foreground="magenta"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="magenta"/>

  <!-- Types -->
  <style name="def:type"                    foreground="cyan"/>

</style-scheme>
